rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // API Keys - ONLY accessible via Cloud Functions (admin SDK)
      match /apiKeys/{providerId} {
        allow read, write: if false;
      }

      // Usage collection - explicit rules for deeply nested structure
      match /usage/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;

        // Daily usage: usage/daily/days/{date}
        match /days/{date} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }

      // Allow all other subcollections (billing, sessions, etc.) EXCEPT apiKeys
      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null
          && request.auth.uid == userId
          && subcollection != 'apiKeys';

        // Nested subcollections (e.g., sessions/messages)
        match /{nestedDoc=**} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
    
    // Conversations belong to authenticated users
    match /conversations/{conversationId} {
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid;

      allow read, update: if request.auth != null
        && resource.data.userId == request.auth.uid;

      // Allow delete if: user owns it OR session has no userId (legacy cleanup)
      allow delete: if request.auth != null
        && (resource.data.userId == request.auth.uid || resource.data.userId == null);

      match /messages/{messageId} {
        allow create: if request.auth != null
          && get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId == request.auth.uid;

        allow read, update: if request.auth != null
          && get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId == request.auth.uid;

        // Allow delete if: user owns parent OR parent has no userId (legacy cleanup)
        allow delete: if request.auth != null
          && (get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId == request.auth.uid
              || get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId == null);
      }
    }

    // Trial history - prevents trial abuse after account deletion
    // Users can read their own trial history, but only cloud functions can write
    match /trialHistory/{docId} {
      allow read: if request.auth != null && request.auth.uid == docId;
      allow write: if false; // Only cloud functions (admin SDK) can write
    }
  }
}