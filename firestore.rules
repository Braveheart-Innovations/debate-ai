rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Conversations belong to authenticated users
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null
        && request.auth.uid == resource.data.userId;

      match /messages/{messageId} {
        allow read, write: if request.auth != null
          && request.auth.uid == get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId;
      }
    }

    // Trial history - prevents trial abuse after account deletion
    // Users can read their own trial history, but only cloud functions can write
    match /trialHistory/{docId} {
      allow read: if request.auth != null && request.auth.uid == docId;
      allow write: if false; // Only cloud functions (admin SDK) can write
    }
  }
}