{
  "expo": {
    "name": "Symposium AI",
    "slug": "symposium-ai",
    "version": "1.2.2",
    "description": "Where Ideas Converge. Where Understanding Emerges.",
    "primaryColor": "#0E9594",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A1A1A"
    },
    "ios": {
      "buildNumber": "2",
      "supportsTablet": true,
      "bundleIdentifier": "com.braveheartinnovations.debateai",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UISupportedInterfaceOrientations": [
          "UIInterfaceOrientationPortrait"
        ],
        "UISupportedInterfaceOrientations~ipad": [
          "UIInterfaceOrientationPortrait",
          "UIInterfaceOrientationPortraitUpsideDown",
          "UIInterfaceOrientationLandscapeLeft",
          "UIInterfaceOrientationLandscapeRight"
        ],
        "NSMicrophoneUsageDescription": "Symposium AI uses the microphone for realtime voice conversations and speech transcription.",
        "NSCameraUsageDescription": "Symposium AI uses your camera to capture images for AI analysis.",
        "NSPhotoLibraryUsageDescription": "Symposium AI accesses your photos to share images with AI assistants.",
        "NSPhotoLibraryAddUsageDescription": "Symposium AI saves generated images to your photo library."
      },
      "associatedDomains": [
        "applinks:symposium-ai.firebaseapp.com",
        "webcredentials:symposium-ai.firebaseapp.com",
        "applinks:symposium-ai.web.app",
        "webcredentials:symposium-ai.web.app",
        "applinks:www.symposiumai.app",
        "applinks:symposiumai.app",
        "webcredentials:www.symposiumai.app",
        "webcredentials:symposiumai.app"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1A1A1A"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.braveheartinnovations.debateai",
      "googleServicesFile": "./google-services.json",
      "versionCode": 7
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-apple-authentication",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "@react-native-google-signin/google-signin",
      [
        "expo-build-properties",
        {
          "android": {
            "ndkVersion": "26.1.10909125"
          },
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "expo-dev-client",
      "expo-video",
      "expo-audio",
      "@react-native-firebase/crashlytics"
    ],
    "extra": {
      "eas": {
        "projectId": "f607938e-5c51-4cac-9901-a0419c7a79fd"
      }
    }
  }
}
